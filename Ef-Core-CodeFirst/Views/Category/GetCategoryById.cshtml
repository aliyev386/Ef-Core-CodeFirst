@using Ef_Core_CodeFirst.Models.Entities.Concretes
@model Category

<div class="search-page-container">
    <form asp-controller="Category" asp-action="GetCategoryById" method="post" class="modern-find-form">
        <div class="search-icon">
            <i class="fas fa-search"></i>
        </div>
        <h3>Search Category</h3>
        <p>Enter the unique ID to retrieve details</p>

        <div class="input-wrapper">
            <input type="number" name="id" placeholder="Category ID..." required />
            <button type="submit" class="btn-find">Find Now</button>
        </div>
    </form>

    <div class="result-section">
        @if (Model != null)
        {
            <div class="category-info-card">
                <div class="card-header">
                    <span class="badge">Result Found</span>
                </div>
                <div class="card-body">
                    <div class="info-item">
                        <label>ID Number</label>
                        <span>#@Model.Id</span>
                    </div>
                    <div class="info-item">
                        <label>Category Name</label>
                        <span class="name">@Model.Name</span>
                    </div>
                </div>
            </div>
        }
        else if (Context.Request.Method == "POST")
        {
            <div class="not-found-card">
                <i class="fas fa-ghost"></i>
                <p>Oops! No category found for this ID.</p>
            </div>
        }
    </div>
</div>

<style>
    :root {
        --accent: #6366f1;
        --accent-hover: #4f46e5;
    }

    .search-page-container {
        max-width: 500px;
        margin: 80px auto;
        padding: 0 20px;
    }

    /* Form Dizaynı */
    .modern-find-form {
        background: #fff;
        padding: 40px 30px;
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.06);
        text-align: center;
        border: 1px solid #f0f0f0;
    }

    .search-icon {
        font-size: 30px;
        color: var(--accent);
        margin-bottom: 15px;
    }

    .modern-find-form h3 {
        font-weight: 700;
        margin-bottom: 5px;
        color: #1f2937;
    }

    .modern-find-form p {
        font-size: 14px;
        color: #6b7280;
        margin-bottom: 25px;
    }

    .input-wrapper {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .modern-find-form input {
        width: 100%;
        padding: 14px 20px;
        border-radius: 12px;
        border: 2px solid #f3f4f6;
        font-size: 16px;
        transition: 0.3s;
        text-align: center;
        outline: none;
    }

        .modern-find-form input:focus {
            border-color: var(--accent);
            background: #fff;
        }

    .btn-find {
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: none;
        background: var(--accent);
        color: white;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-find:hover {
            background: var(--accent-hover);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
        }

    /* Nəticə Kartı */
    .category-info-card {
        margin-top: 30px;
        background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
        padding: 25px;
        border-radius: 20px;
        border-left: 5px solid var(--accent);
        box-shadow: 0 10px 25px rgba(0,0,0,0.04);
        animation: fadeIn 0.5s ease;
    }

    .badge {
        background: #e0e7ff;
        color: var(--accent);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 700;
    }

    .info-item {
        margin-top: 15px;
    }

        .info-item label {
            display: block;
            font-size: 12px;
            text-transform: uppercase;
            color: #9ca3af;
            letter-spacing: 1px;
        }

        .info-item span {
            font-size: 18px;
            font-weight: 600;
            color: #374151;
        }

        .info-item .name {
            font-size: 24px;
            color: var(--accent);
        }

    /* Tapılmadı Kartı */
    .not-found-card {
        margin-top: 30px;
        background: #fff1f2;
        padding: 20px;
        border-radius: 15px;
        text-align: center;
        color: #e11d48;
        border: 1px dashed #fda4af;
    }

        .not-found-card i {
            font-size: 30px;
            margin-bottom: 10px;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>