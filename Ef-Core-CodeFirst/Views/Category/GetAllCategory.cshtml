@using Ef_Core_CodeFirst.Models.Entities.Concretes
@model List<Category>

<div class="category-container">
    <div class="header-section">
        <div class="text-group">
            <h1 class="title">Product Categories</h1>
            <p class="subtitle">Manage and organize your product catalog</p>
        </div>
        <a asp-action="AddCategory" class="btn-add-new">
            <i class="fas fa-plus"></i> Add New Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">📂</div>
            <h3>No categories yet</h3>
            <p>Start by adding your first category to the list.</p>
        </div>
    }
    else
    {
        <div class="category-grid">
            @foreach (var category in Model)
            {
                <div class="category-item-card">
                    <div class="card-badge">#@category.Id</div>
                    <div class="card-content">
                        <h2 class="category-name">@category.Name</h2>
                        <div class="action-buttons">
                            <a class="btn-action edit" asp-route-id="@category.Id" asp-action="EditCategory" title="Edit">
                                <i class="fas fa-pen"></i> Edit
                            </a>
                            <a class="btn-action delete" asp-route-id="@category.Id" asp-action="DeleteCategory" title="Delete">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    :root {
        --primary: #4361ee;
        --danger: #ef476f;
        --warning: #ffd166;
        --dark: #2b2d42;
        --light-bg: #f8f9fc;
    }

    .category-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 0 20px;
    }

    /* Başlıq Hissəsi */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 40px;
        border-bottom: 2px solid #eee;
        padding-bottom: 20px;
    }

    .title {
        font-size: 32px;
        font-weight: 800;
        color: var(--dark);
        margin: 0;
    }

    .subtitle {
        color: #888;
        margin: 5px 0 0 0;
    }

    .btn-add-new {
        background: var(--primary);
        color: white;
        padding: 12px 24px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
    }

        .btn-add-new:hover {
            transform: translateY(-2px);
            background: #3a0ca3;
        }

    /* Grid Sistemi */
    .category-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 25px;
    }

    /* Kart Dizaynı */
    .category-item-card {
        background: white;
        border-radius: 20px;
        position: relative;
        overflow: hidden;
        border: 1px solid #f0f0f0;
        transition: all 0.3s ease;
    }

        .category-item-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.07);
            border-color: var(--primary);
        }

    .card-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #f1f3f5;
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 700;
        color: #adb5bd;
    }

    .card-content {
        padding: 30px;
    }

    .category-name {
        font-size: 22px;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 20px;
    }

    /* Düymələr */
    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-action {
        flex: 1;
        padding: 10px;
        text-align: center;
        border-radius: 10px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-action.edit {
            background: #eef2ff;
            color: var(--primary);
        }

            .btn-action.edit:hover {
                background: var(--primary);
                color: white;
            }

        .btn-action.delete {
            background: #fff0f3;
            color: var(--danger);
        }

            .btn-action.delete:hover {
                background: var(--danger);
                color: white;
            }

    /* Boş Siyahı */
    .empty-state {
        text-align: center;
        padding: 60px;
        background: white;
        border-radius: 20px;
        color: #888;
    }

    .empty-icon {
        font-size: 50px;
        margin-bottom: 20px;
    }
</style>