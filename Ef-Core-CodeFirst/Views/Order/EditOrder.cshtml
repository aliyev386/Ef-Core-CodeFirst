@using Ef_Core_CodeFirst.Models.Entities.Concretes 
@model Order
@{
    var allProducts = ViewBag.Products as List<Product>;
    var selectedProductIds = Model.Products?.Select(p => p.Id).ToList() ?? new List<int>();
}

<div class="edit-order-wrapper">
    <div class="edit-order-card">
        <div class="card-header">
            <div class="icon-box-edit">
                <i class="fas fa-file-invoice"></i>
            </div>
            <h1>Update Order #@Model.Id</h1>
            <p>Review and modify order details or product list</p>
        </div>

        <form asp-controller="Order" asp-action="EditOrder" method="post" class="modern-form">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

            <div class="form-group-custom">
                <label asp-for="OrderDate">Update Order Date</label>
                <div class="input-with-icon">
                    <input type="date" asp-for="OrderDate" class="custom-input"
                           value="@Model.OrderDate.ToString("yyyy-MM-dd")">
                </div>
                <span asp-validation-for="OrderDate" class="error-text"></span>
            </div>

            <div class="form-group-custom">
                <label>Manage Products</label>
                <div class="select-container">
                    <select name="productIds" multiple class="custom-select-edit">
                        @foreach (var product in allProducts)
                        {
                            bool isSelected = selectedProductIds.Contains(product.Id);
                            <!option value="@product.Id" @(isSelected ? "selected" : "")>
                            @(isSelected ? "✅ " : "📦 ") @product.Name
                            </!option>
                        }
                    </select>
                </div>
                <div class="info-note">
                    <i class="fas fa-info-circle"></i> Use <strong>Ctrl + Click</strong> to add or remove products from the order.
                </div>
            </div>

            <div class="form-footer-actions">
                <a href="/Order/Index" class="btn-back">Cancel</a>
                <button type="submit" class="btn-update-order">
                    Update Order <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --edit-theme: #6366f1;
        --edit-dark: #4f46e5;
        --soft-bg: #f5f3ff;
    }

    .edit-order-wrapper {
        min-height: 85vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        background-color: #f8fafc;
    }

    .edit-order-card {
        width: 100%;
        max-width: 650px;
        background: #ffffff;
        border-radius: 24px;
        padding: 45px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.04);
        border: 1px solid #e2e8f0;
    }

    .card-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .icon-box-edit {
        width: 64px;
        height: 64px;
        background: var(--soft-bg);
        color: var(--edit-theme);
        border-radius: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto 15px;
        font-size: 26px;
    }

    .card-header h1 {
        font-size: 28px;
        font-weight: 800;
        color: #1e293b;
        margin: 0;
    }

    /* Form elementləri */
    .form-group-custom {
        margin-bottom: 25px;
    }

        .form-group-custom label {
            display: block;
            font-weight: 700;
            font-size: 14px;
            color: #475569;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 10px;
        }

    .custom-input, .custom-select-edit {
        width: 100%;
        border: 2px solid #f1f5f9;
        border-radius: 12px;
        padding: 14px;
        font-size: 16px;
        background: #f8fafc;
        transition: 0.3s;
    }

        .custom-input:focus, .custom-select-edit:focus {
            border-color: var(--edit-theme);
            background: #fff;
            outline: none;
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .custom-select-edit {
        height: 180px;
    }

        .custom-select-edit option {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 4px;
        }

    .info-note {
        margin-top: 10px;
        font-size: 13px;
        color: #64748b;
        background: #f1f5f9;
        padding: 10px;
        border-radius: 8px;
    }

    /* Düymələr */
    .form-footer-actions {
        display: flex;
        gap: 15px;
        margin-top: 40px;
    }

    .btn-update-order {
        flex: 2;
        padding: 16px;
        background: var(--edit-theme);
        color: white;
        border: none;
        border-radius: 14px;
        font-size: 16px;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .btn-update-order:hover {
            background: var(--edit-dark);
            transform: translateY(-2px);
        }

    .btn-back {
        flex: 1;
        padding: 16px;
        text-align: center;
        text-decoration: none;
        background: #f1f5f9;
        color: #475569;
        border-radius: 14px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-back:hover {
            background: #e2e8f0;
        }
</style>