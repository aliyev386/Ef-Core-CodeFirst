@using Ef_Core_CodeFirst.Models.Entities.Concretes
@model List<Order>

<div class="orders-container">
    <div class="list-header">
        <div>
            <h1 class="main-title">Order Management</h1>
            <p class="count-text">Total @Model.Count orders found in the system</p>
        </div>
        <a asp-action="AddOrder" class="btn-new-order">
            <i class="fas fa-cart-plus"></i> New Order
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="no-data-card">
            <div class="icon-circle">📭</div>
            <h2>No Orders Yet</h2>
            <p>Looks like there are no orders to display right now.</p>
        </div>
    }
    else
    {
        <div class="orders-grid">
            @foreach (var order in Model)
            {
                <div class="order-glass-card">
                    <div class="card-top">
                        <span class="order-number">ORDER #@order.Id</span>
                        <span class="status-pill">Processed</span>
                    </div>

                    <div class="card-middle">
                        <div class="date-info">
                            <i class="far fa-calendar-check"></i>
                            <span>@order.OrderDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="product-summary">
                            <i class="fas fa-box-open"></i>
                            <span>@(order.Products?.Count ?? 0) Products Included</span>
                        </div>
                    </div>

                    <div class="card-actions">
                        <a class="action-btn edit-btn" asp-route-id="@order.Id" asp-action="EditOrder">
                            <i class="fas fa-sliders-h"></i> Manage
                        </a>
                        <a class="action-btn delete-btn" asp-route-id="@order.Id" asp-action="DeleteOrder">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    :root {
        --order-blue: #3b82f6;
        --order-bg: #f8fafc;
        --text-main: #1e293b;
        --danger-red: #ef4444;
    }

    .orders-container {
        max-width: 1200px;
        margin: 60px auto;
        padding: 0 25px;
    }

    /* Header */
    .list-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
    }

    .main-title {
        font-size: 34px;
        font-weight: 800;
        color: var(--text-main);
        letter-spacing: -1px;
    }

    .count-text {
        color: #64748b;
        font-weight: 500;
    }

    .btn-new-order {
        background: var(--order-blue);
        color: white;
        padding: 14px 28px;
        border-radius: 14px;
        text-decoration: none;
        font-weight: 600;
        box-shadow: 0 10px 20px rgba(59, 130, 246, 0.2);
        transition: 0.3s;
    }

        .btn-new-order:hover {
            transform: scale(1.05);
            background: #2563eb;
        }

    /* Grid & Cards */
    .orders-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 30px;
    }

    .order-glass-card {
        background: white;
        border-radius: 22px;
        padding: 25px;
        border: 1px solid #e2e8f0;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

        .order-glass-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.08);
            border-color: var(--order-blue);
        }

    .card-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .order-number {
        font-weight: 700;
        font-size: 13px;
        color: #94a3b8;
        letter-spacing: 1px;
    }

    .status-pill {
        background: #dcfce7;
        color: #166534;
        font-size: 11px;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 700;
        text-transform: uppercase;
    }

    .card-middle {
        margin-bottom: 25px;
    }

    .date-info {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-main);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .product-summary {
        font-size: 14px;
        color: #64748b;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Buttons */
    .card-actions {
        display: flex;
        gap: 12px;
    }

    .action-btn {
        padding: 12px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .edit-btn {
        background: #f1f5f9;
        color: var(--text-main);
        flex-grow: 1;
        gap: 8px;
    }

        .edit-btn:hover {
            background: var(--text-main);
            color: white;
        }

    .delete-btn {
        background: #fee2e2;
        color: var(--danger-red);
        width: 48px;
    }

    .delete-btn