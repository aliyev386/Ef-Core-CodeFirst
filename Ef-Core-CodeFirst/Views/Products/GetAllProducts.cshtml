@using Ef_Core_CodeFirst.Models.Entities.Concretes
@model List<Product>

<div class="product-inventory-container">
    <div class="inventory-header">
        <div class="header-text">
            <h1>Product Catalog</h1>
            <p>Displaying @Model.Count items in your store</p>
        </div>
        <a asp-action="AddProduct" class="btn-create-product">
            <i class="fas fa-plus-circle"></i> Add New Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-inventory">
            <div class="empty-icon">📦</div>
            <h3>Your inventory is empty</h3>
            <p>Start adding products to see them listed here.</p>
            <a asp-action="AddProduct" class="btn-link">Add your first product</a>
        </div>
    }
    else
    {
        <div class="product-grid">
            @foreach (var product in Model)
            {
                <div class="modern-product-card">
                    <div class="card-status-bar">
                        <span class="category-tag">@product.Category?.Name</span>
                        <span class="id-tag">ID: @product.Id</span>
                    </div>

                    <div class="product-info">
                        <h2 class="item-name">@product.Name</h2>
                        <div class="price-box">
                            <span class="currency">$</span>
                            <span class="amount">@product.Price.ToString("F2")</span>
                        </div>
                    </div>

                    <div class="card-footer-actions">
                        <a class="action-link edit" asp-route-id="@product.Id" asp-action="EditProduct">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="action-link delete" asp-route-id="@product.Id" asp-action="DeleteProduct">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    :root {
        --primary-accent: #2563eb;
        --success-green: #10b981;
        --danger-red: #ef4444;
        --text-dark: #0f172a;
        --bg-light: #f8fafc;
    }

    .product-inventory-container {
        max-width: 1200px;
        margin: 50px auto;
        padding: 0 20px;
    }

    /* Header */
    .inventory-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 40px;
        background: white;
        padding: 25px;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.02);
    }

    .header-text h1 {
        font-size: 28px;
        font-weight: 800;
        color: var(--text-dark);
        margin: 0;
    }

    .btn-create-product {
        background: var(--primary-accent);
        color: white;
        padding: 12px 24px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: 0.3s;
    }

        .btn-create-product:hover {
            background: #1d4ed8;
            transform: translateY(-2px);
        }

    /* Grid Layout */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 25px;
    }

    /* Modern Card Design */
    .modern-product-card {
        background: white;
        border-radius: 24px;
        padding: 24px;
        border: 1px solid #e2e8f0;
        display: flex;
        flex-direction: column;
        transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
    }

        .modern-product-card:hover {
            border-color: var(--primary-accent);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05);
            transform: scale(1.02);
        }

    .card-status-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .category-tag {
        background: #eff6ff;
        color: var(--primary-accent);
        font-size: 11px;
        font-weight: 700;
        padding: 4px 10px;
        border-radius: 8px;
        text-transform: uppercase;
    }

    .id-tag {
        font-size: 12px;
        color: #94a3b8;
        font-weight: 500;
    }

    .item-name {
        font-size: 20px;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 12px;
        line-height: 1.2;
    }

    .price-box {
        margin-bottom: 25px;
    }

    .currency {
        font-size: 16px;
        color: var(--success-green);
        font-weight: 600;
    }

    .amount {
        font-size: 24px;
        font-weight: 800;
        color: var(--success-green);
    }

    /* Actions */
    .card-footer-actions {
        display: flex;
        gap: 10px;
        margin-top: auto;
        padding-top: 15px;
        border-top: 1px solid #f1f5f9;
    }

    .action-link {
        flex: 1;
        text-align: center;
        padding: 10px;
        border-radius: 10px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: 0.2s;
    }

        .action-link.edit {
            background: #f1f5f9;
            color: #475569;
        }

            .action-link.edit:hover {
                background: #e2e8f0;
                color: var(--text-dark);
            }

        .action-link.delete {
            background: #fef2f2;
            color: var(--danger-red);
        }

            .action-link.delete:hover {
                background: var(--danger-red);
                color: white;
            }

    /* Empty State */
    .empty-inventory {
        text-align: center;
        padding: 100px 20px;
        background: white;
        border-radius: 30px;
        border: 2px dashed #cbd5e1;
    }

    .empty-icon {
        font-size: 60px;
        margin-bottom: 20px;
    }

    .btn-link {
        color: var(--primary-accent);
        font-weight: 600;
        text-decoration: none;
    }
</style>