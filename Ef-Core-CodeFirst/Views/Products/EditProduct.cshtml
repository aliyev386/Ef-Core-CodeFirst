@using Ef_Core_CodeFirst.Models.Entities.Concretes
@model Product
@{
    var categories = ViewBag.Categories;
}

<div class="edit-product-wrapper">
    <div class="edit-product-card">
        <div class="card-header">
            <div class="header-icon-circle">
                <i class="fas fa-edit"></i>
            </div>
            <h1>Update Product</h1>
            <p>Modify the price, name, or category of your item</p>
        </div>

        <form asp-controller="Product" asp-action="EditProduct" method="post" class="modern-edit-form">
            <input type="hidden" asp-for="Id" />

            @if (ViewBag.Error != null)
            {
                <div class="error-alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                </div>
            }

            <div class="form-grid">
                <div class="input-field">
                    <label asp-for="Name">Product Name</label>
                    <div class="input-wrapper">
                        <i class="fas fa-box-open"></i>
                        <input type="text" asp-for="Name" placeholder="Enter Name">
                    </div>
                    <span asp-validation-for="Name" class="error-text"></span>
                </div>

                <div class="row-flex">
                    <div class="input-field flex-1">
                        <label asp-for="Price">Price</label>
                        <div class="input-wrapper">
                            <i class="fas fa-dollar-sign"></i>
                            <input type="number" step="0.01" asp-for="Price">
                        </div>
                        <span asp-validation-for="Price" class="error-text"></span>
                    </div>

                    <div class="input-field flex-1">
                        <label asp-for="CategoryId">Category</label>
                        <div class="input-wrapper">
                            <i class="fas fa-layer-group"></i>
                            <select asp-for="CategoryId">
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a href="/Product/Index" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-update">
                    Save Changes <i class="fas fa-save"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
        --primary-blue: #3b82f6;
        --dark-slate: #1e293b;
        --soft-gray: #f8fafc;
        --border: #e2e8f0;
    }

    .edit-product-wrapper {
        min-height: 90vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f1f5f9;
        padding: 40px 20px;
    }

    .edit-product-card {
        width: 100%;
        max-width: 600px;
        background: #ffffff;
        border-radius: 24px;
        padding: 45px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .card-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .header-icon-circle {
        width: 60px;
        height: 60px;
        background: #eff6ff;
        color: var(--primary-blue);
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto 15px;
        font-size: 24px;
    }

    .card-header h1 {
        font-size: 28px;
        font-weight: 800;
        color: var(--dark-slate);
        margin: 0;
    }

    .card-header p {
        color: #64748b;
        margin-top: 8px;
    }

    /* Form Elements */
    .input-field {
        margin-bottom: 20px;
    }

        .input-field label {
            display: block;
            font-weight: 700;
            font-size: 14px;
            color: #475569;
            margin-bottom: 8px;
        }

    .input-wrapper {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-wrapper i {
            position: absolute;
            left: 15px;
            color: #94a3b8;
        }

        .input-wrapper input, .input-wrapper select {
            width: 100%;
            padding: 13px 15px 13px 42px;
            border-radius: 12px;
            border: 2px solid var(--soft-gray);
            background: var(--soft-gray);
            font-size: 16px;
            transition: 0.3s;
            outline: none;
        }

            .input-wrapper input:focus, .input-wrapper select:focus {
                background: #fff;
                border-color: var(--primary-blue);
                box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
            }

    .row-flex {
        display: flex;
        gap: 15px;
    }

    .flex-1 {
        flex: 1;
    }

    /* Buttons */
    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 35px;
    }

    .btn-update {
        flex: 2;
        padding: 15px;
        background: var(--dark-slate);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 700;
        cursor: pointer;
        transition: 0.3s;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .btn-update:hover {
            background: #000;
            transform: translateY(-2px);
        }

    .btn-cancel {
        flex: 1;
        padding: 15px;
        text-align: center;
        text-decoration: none;
        background: #f1f5f9;
        color: #64748b;
        border-radius: 12px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-cancel:hover {
            background: #e2e8f0;
            color: #334155;
        }

    .error-alert {
        background: #fef2f2;
        color: #b91c1c;
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 25px;
        font-size: 14px;
        border: 1px solid #fee2e2;
    }

    .error-text {
        color: #dc2626;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }
</style>